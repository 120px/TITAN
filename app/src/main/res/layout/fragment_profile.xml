<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            style="@style/mainPageButtons"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:src="@drawable/default_user_photo" />

        <TextView
            android:id="@+id/tvDisplayUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="@color/titanRed"
            />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:layout_marginTop="10dp"

            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_black_24dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notifications_black_24dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dashboard_black_24dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/titanRed"
                    ></TextView>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/titanRed"/>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/titanRed"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tlMyStatistics"
            android:background="@drawable/profilesectionoutline"
            style="@style/profileTables"

            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tvMyStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Statistics"
                    android:textAlignment="center"
                    android:textColor="@color/titanRed"
                    android:textSize="25dp"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="9dp"

                >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workouts Completed: "
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Goals Completed: "
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kilometers walked:  "
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tlCompletedWorkouts"
            android:background="@drawable/profilesectionoutline"
            style="@style/profileTables"

            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workouts Per Week*"
                    android:textAlignment="center"
                    android:textColor="@color/titanRed"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/completedWorkoutsBarchart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250px"

                />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableLayout>

        <TableLayout
            android:id="@+id/dda"
            android:background="@drawable/profilesectionoutline"
            style="@style/profileTables"

            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tvDistanceWalked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance Walked (KM)*"
                    android:textAlignment="center"
                    android:textColor="@color/titanRed"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/KMWalkedLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="350px"
                    android:layout_marginBottom="100dp"
                    />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            style="@style/mainPageButtons"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>